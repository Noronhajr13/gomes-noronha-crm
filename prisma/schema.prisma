generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String
  password   String
  role       Role     @default(CORRETOR)
  phone      String?
  avatar     String?
  creci      String?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  properties Property[]
  leads      Lead[]
  tasks      Task[]
  activities Activity[]
  documents  Document[]
  @@map("users")
}

enum Role {
  ADMIN
  GERENTE
  CORRETOR
}

model Property {
  id           String   @id @default(cuid())
  code         String   @unique
  title        String
  description  String?
  type         PropertyType
  status       PropertyStatus @default(DISPONIVEL)
  purpose      PropertyPurpose
  price        Float
  area         Float?
  bedrooms     Int?
  bathrooms    Int?
  parkingSpots Int?
  address      String
  neighborhood String
  city         String
  state        String
  zipCode      String?
  latitude     Float?
  longitude    Float?
  images       String[]
  features     String[]
  featured     Boolean  @default(false)
  exclusive    Boolean  @default(false)
  condominiumFee Float?
  iptu         Float?
  suites       Int?
  yearBuilt    Int?
  addressNumber String?
  complement   String?
  videos       String[]
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  leads        Lead[]
  @@map("properties")
}

enum PropertyType {
  CASA
  APARTAMENTO
  TERRENO
  COMERCIAL
  RURAL
  COBERTURA
  KITNET
  SOBRADO
  SALA_COMERCIAL
  LOJA
  GALPAO
  SITIO
  FAZENDA
  FLAT
}

enum PropertyStatus {
  DISPONIVEL
  VENDIDO
  ALUGADO
  RESERVADO
  INATIVO
}

enum PropertyPurpose {
  VENDA
  ALUGUEL
  VENDA_ALUGUEL
}

model Lead {
  id                    String     @id @default(cuid())
  name                  String
  email                 String?
  phone                 String
  cpf                   String?
  message               String?
  source                LeadSource @default(SITE)
  status                LeadStatus @default(NOVO)
  budget                Float?
  interestType          String?
  preferredNeighborhoods String[]
  score                 Int        @default(0)
  contactedAt           DateTime?
  propertyId            String?
  property              Property?  @relation(fields: [propertyId], references: [id])
  userId                String?
  user                  User?      @relation(fields: [userId], references: [id])
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
  tasks                 Task[]
  activities            Activity[]
  visits                Visit[]
  @@map("leads")
}

enum LeadSource {
  SITE
  TELEFONE
  INDICACAO
  FACEBOOK
  INSTAGRAM
  WHATSAPP
  PORTAIS
  PORTAL_ZAP
  PORTAL_VIVAREAL
  PORTAL_OLX
  REDES_SOCIAIS
  VISITA_ESCRITORIO
  OUTRO
}

enum LeadStatus {
  NOVO
  CONTATO_REALIZADO
  QUALIFICADO
  VISITA_AGENDADA
  PROPOSTA_ENVIADA
  NEGOCIACAO
  FECHADO_GANHO
  FECHADO_PERDIDO
}

model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  completed   Boolean      @default(false)
  status      TaskStatus   @default(PENDENTE)
  type        TaskType     @default(GERAL)
  priority    TaskPriority @default(MEDIA)
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  leadId      String?
  lead        Lead?        @relation(fields: [leadId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  @@map("tasks")
}

enum TaskStatus {
  PENDENTE
  EM_ANDAMENTO
  CONCLUIDA
  CANCELADA
}

enum TaskType {
  GERAL
  LIGACAO
  VISITA
  DOCUMENTACAO
  CONTRATO
  FINANCEIRO
  FOLLOW_UP
}

enum TaskPriority {
  BAIXA
  MEDIA
  ALTA
  URGENTE
}

model Activity {
  id          String       @id @default(cuid())
  type        String
  description String
  metadata    Json?
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  leadId      String?
  lead        Lead?        @relation(fields: [leadId], references: [id])
  createdAt   DateTime     @default(now())
  @@map("activities")
}

model Visit {
  id          String      @id @default(cuid())
  scheduledAt DateTime
  completedAt DateTime?
  status      VisitStatus @default(AGENDADA)
  notes       String?
  feedback    String?
  leadId      String
  lead        Lead        @relation(fields: [leadId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  @@map("visits")
}

enum VisitStatus {
  AGENDADA
  CONFIRMADA
  REALIZADA
  CANCELADA
  REAGENDADA
}

enum ActivityType {
  LIGACAO
  EMAIL
  VISITA
  REUNIAO
  PROPOSTA
  CONTRATO
  OUTROS
}

model Document {
  id          String         @id @default(cuid())
  title       String
  description String?
  type        DocumentType
  category    String?
  fileUrl     String
  fileName    String
  fileSize    Int
  mimeType    String
  tags        String[]
  leadId      String?
  propertyId  String?
  userId      String
  uploadedBy  User           @relation(fields: [userId], references: [id])
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  @@map("documents")
}

enum DocumentType {
  CONTRATO
  PROPOSTA
  RG
  CPF
  COMPROVANTE_RESIDENCIA
  COMPROVANTE_RENDA
  ESCRITURA
  IPTU
  MATRICULA
  CERTIDAO
  LAUDO
  FOTO
  OUTROS
}

model Configuration {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      ConfigType @default(STRING)
  category  String?
  label     String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("configurations")
}

enum ConfigType {
  STRING
  NUMBER
  BOOLEAN
  JSON
}
